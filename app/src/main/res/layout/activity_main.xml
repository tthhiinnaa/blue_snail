<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    >

    <TextView
        android:id="@+id/text_guide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_stasus_check"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/textview_bg"
        android:gravity="center"
        android:text="디폴트 폴더 상태 표시!"
        android:textColor="#4F0088"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_delete_cache"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_setAlarm"
        android:background="@drawable/button_bg"
        android:text="1.임시 메모리 삭제" />

    <Button
        android:id="@+id/bt_open_otherapp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/bt_delete_cache"
        android:layout_toRightOf="@+id/bt_delete_cache"
        android:background="@drawable/button_bg"
        android:text="2.카카오톡 실행" />

    <Button
        android:id="@+id/bt_name_date_change"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_plzCloseKakao"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_bg"
        android:text="3.파일이름 날짜로 변경" />

    <Button
        android:id="@+id/bt_name_date_changed_check"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/bt_name_date_change"
        android:layout_toRightOf="@+id/bt_name_date_change"
        android:background="@drawable/button_bg"
        android:text="4.날짜명 파일 상태 확인" />

    <Button
        android:id="@+id/bt_readmeopen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/bt_getFileList"
        android:layout_toRightOf="@+id/bt_getFileList"
        android:background="@drawable/button_bg"
        android:text="설명서 열기" />

    <Button
        android:id="@+id/bt_getFileList"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/bt_name_date_changed_check"
        android:layout_below="@id/bt_name_date_changed_check"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg"
        android:text="파일목록 확인 열기" />

    <TextView
        android:id="@+id/text_plzCloseKakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_delete_cache"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="설명서와 파일목록 확인 페이지를 읽어주세요"
        android:textColor="#FF0000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_file"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textColor="#8C00A5"
        android:text="디폴트 폴더 용량"
        android:scrollbars="vertical|horizontal"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_guide_1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#000316"
        android:gravity="center"
        android:text="날짜명 파일 존재가 변경되었는지 표시"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text_stasus_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_name_date_changed_check"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:textColor="#00052E"
        android:gravity="center"
        android:text="현재 default 파일 상태를 표시합니다:"
        android:textSize="16dp" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="215dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/button_setAlarm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/timePicker"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg"
        android:text="알림 시간 변경하기" />

    <Button
        android:id="@+id/bt_setFriendNum"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/button_setAlarm"
        android:layout_toRightOf="@+id/button_setAlarm"
        android:background="@drawable/button_bg"
        android:text="친구수 설정하기" />

    <TextView
        android:id="@+id/textview_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/timePicker"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:textColor="#0C2D3C"
        android:text="알람 설정 상태!" />


</RelativeLayout>

